<dir class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">CREAR CLIENTE</h3>
                </div>
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombres</label>
                            <input type="text" class="form-control" name="nomcli" id="nomcli" placeholder="Nombres" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="lastname" class="input-group-text">Apellidos</label>
                            <input type="text" class="form-control" name="apecli" id="apecli" placeholder="Apellidos" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="age" class="input-group-text">Nro. DNI</label>
                            <input type="text" class="form-control" name="nrodnicli" id="nrodnicli" placeholder="Nro. DNI" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="age" class="input-group-text">Nro. Telefono</label>
                            <input type="text" class="form-control" name="telcli" id="telcli" placeholder="Nro. Celular" required>
                        </div>

                         <div class="input-group mt-2">
                            <label for="idrelacion" class="input-group-text">Relaci√≥n</label>
                            <select class="form-select" id="idrelacion" name="idrelacion">
                                <option value="" selected disabled>Seleccionar</option>
                                {{#each relaciones}}
                                    <option value="{{id}}">{{estado}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="input-group mt-2">
                            <label for="idtipocliente" class="input-group-text">Tipo de Cliente</label>
                            <select class="form-select" id="idtipocliente" name="idtipocliente">
                                <option value="" selected disabled>Seleccionar</option>
                                {{#each tiposCliente}}
                                    <option value="{{id}}">{{tipocliente}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Guardar</button>
                            <button class="btn btn-danger"> <a href="/list" class="nav-link link-light" aria-current="page">Cancelar</a></button>
                        </div>
                        
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</dir>